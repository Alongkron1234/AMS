generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}



model Room {
  id     String @id @default(cuid())
  number String @unique
  price  Float
  status String @default("VACANT")

  tenants  Tenant[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tenant {
  id        String  @id @default(cuid())
  firstName String
  lastName  String
  idCard    String?
  phone     String?
  lineId    String?

  startDate DateTime
  endDate   DateTime?
  deposit   Float

  roomId String
  room   Room   @relation(fields: [roomId], references: [id])

  invoices Invoice[]

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Invoice {
  id           String   @id @default(cuid())
  month        Int
  year         Int
  
  rentAmount   Float   
  
  waterMeterOld     Float    
  waterMeterNew     Float    
  waterUsage   Float   
  waterAmount  Float   
  
  electMeterOld     Float 
  electMeterNew     Float 
  electUsage   Float
  electAmount  Float 
  
  otherAmount  Float    @default(0)
  totalAmount  Float   
  
  status       String   @default("UNPAID")
  paidAt       DateTime?
  
  tenantId     String
  tenant       Tenant   @relation(fields: [tenantId], references: [id])
  createdAt    DateTime @default(now())
}


model SystemConfig {
  id               String   @id @default(cuid())
  waterUnitRate    Float    @default(18.0) 
  electricUnitRate Float    @default(7.0) 
  updatedAt        DateTime @updatedAt
}

model Profile {
  id        String  @id @default(cuid())
  clerkId   String  @unique
  firstName String
  lastName  String
  userName  String
  email     String
  imageUrl  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
